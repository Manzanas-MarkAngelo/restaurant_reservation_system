<h1>Edit Reservation</h1>

<%= form_with model: @reservation, url: reservation_path(@reservation), method: :patch, class: "mt-3", data: { turbo: false } do |f| %>

  <div class="form-group">
    <label>User</label>
    <p><%= @reservation.user.full_name %></p>
  </div>

  <div class="form-group">
    <label>Time Slot</label>
    <p><%= @time_slot.start_time.strftime("%I:%M %p") %> - <%= @time_slot.end_time.strftime("%I:%M %p") %></p>
  </div>

  <div class="form-group">
    <%= f.label :party_size %>
    <%= f.number_field :party_size, class: "form-control", value: @reservation.party_size, min: 1, required: true %>
  </div>

  <div class="form-group">
    <%= f.label :status, "Reservation Status" %>
    <%= f.select :status, options_for_select([['Confirmed', 'Confirmed'], ['Cancelled', 'Cancelled']], @reservation.status), { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.submit "Update Reservation", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "Back to Reservations", admin_all_reservations_path, class: "btn btn-secondary mt-3" %>
