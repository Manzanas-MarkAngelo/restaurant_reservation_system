<%= form_with(model: @table_assignment, url: table_assignment_path(@table_assignment), local: true) do |form| %>
  <div class="form-group">
    <%= form.label :max_persons, "Max Persons" %>
    <%= form.number_field :max_persons, min: 1, class: "form-control", required: true %>
  </div>
  
  <div class="form-group">
    <%= form.label :is_available, "Availability" %>
    <%= form.select :is_available, [['Available', true], ['Not Available', false]], {}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit "Update Table Assignment", class: "btn btn-success" %>
  </div>
<% end %>
