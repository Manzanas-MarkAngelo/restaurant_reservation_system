<h1 class="text-center my-4">Register</h1>

<div class="card mx-auto" style="max-width: 500px;">
  <div class="card-header text-center">
    <h3>Sign Up</h3>
  </div>
  <div class="card-body">
    <%= form_with model: @user, url: registration_path, local: true, html: { class: "form-horizontal", data: { turbo: false } } do |form| %>
      <div class="form-group">
        <%= form.label :full_name, class: 'col-form-label' %>
        <%= form.text_field :full_name, class: 'form-control' %>
        <% if @user.errors[:full_name].any? %>
          <div class="text-danger">
            <%= @user.errors[:full_name].join(", ") %>
          </div>
        <% end %>
      </div>

      <div class="form-group">
        <%= form.label :email, class: 'col-form-label' %>
        <%= form.email_field :email, class: 'form-control' %>
        <% if @user.errors[:email].any? %>
          <div class="text-danger">
            <%= @user.errors[:email].join(", ") %>
          </div>
        <% end %>
      </div>

      <div class="form-group">
        <%= form.label :contact_number, class: 'col-form-label' %>
        <%= form.text_field :contact_number, class: 'form-control' %>
        <% if @user.errors[:contact_number].any? %>
          <div class="text-danger">
            <%= @user.errors[:contact_number].join(", ") %>
          </div>
        <% end %>
      </div>

      <div class="form-group">
        <%= form.label :password, class: 'col-form-label' %>
        <%= form.password_field :password, class: 'form-control' %>
        <% if @user.errors[:password].any? %>
          <div class="text-danger">
            <%= @user.errors[:password].join(", ") %>
          </div>
        <% end %>
      </div>

      <div class="form-group">
        <%= form.label :password_confirmation, class: 'col-form-label' %>
        <%= form.password_field :password_confirmation, class: 'form-control' %>
        <% if @user.errors[:password_confirmation].any? %>
          <div class="text-danger">
            <%= @user.errors[:password_confirmation].join(", ") %>
          </div>
        <% end %>
      </div>

      <div class="form-group text-center">
        <%= form.submit "Register", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
