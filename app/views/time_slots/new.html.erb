<%= form_with(model: @time_slot, url: time_slots_path, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :date %>
    <%= form.date_field :date, value: @date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :start_time, "Start Time" %>
    <%= form.select :start_time, 
         options_for_select(@hours&.map { |h| ["#{h % 12 == 0 ? 12 : h % 12} #{h < 12 ? 'AM' : 'PM'}", h] }), 
         { prompt: "Select Start Time" }, class: "form-control" %>
    <%= @time_slot.errors.full_messages_for(:start_time).join(", ") if @time_slot.errors.any? %>
  </div>

  <div class="form-group">
    <%= form.label :max_tables, "Max Tables" %>
    <%= form.number_field :max_tables, class: "form-control", min: 1 %>
    <%= @time_slot.errors.full_messages_for(:max_tables).join(", ") if @time_slot.errors.any? %>
  </div>

  <div class="form-group">
    <%= form.submit "Add Time Slot", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "Back", time_slots_path(date: @date), class: "btn btn-secondary" %>
