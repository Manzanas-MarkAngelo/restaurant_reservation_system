<h1 class="text-center my-4">Admin Login</h1>

<div class="card mx-auto" style="max-width: 500px;">
  <div class="card-header text-center">
    <h3>Login</h3>
  </div>
  <div class="card-body">
    <%= form_with model: @admin, url: admin_login_path, local: true, html: { class: "form-horizontal", data: { turbo: false } } do |form| %>
      
      <div class="form-group">
        <%= form.label :email, class: 'col-form-label' %>
        <%= form.email_field :email, class: 'form-control' %>
        <% if @admin.errors[:email].any? %>
          <div class="text-danger">
            <%= @admin.errors[:email].join(", ") %>
          </div>
        <% end %>
      </div>

      <div class="form-group">
        <%= form.label :password, class: 'col-form-label' %>
        <%= form.password_field :password, class: 'form-control' %>
        <% if @admin.errors[:password].any? %>
          <div class="text-danger">
            <%= @admin.errors[:password].join(", ") %>
          </div>
        <% end %>
      </div>

      <div class="form-group text-center">
        <%= form.submit "Login", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
